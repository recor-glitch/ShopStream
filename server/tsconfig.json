{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "lib": ["es6"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"]
    }
  },
  "include": ["src/**/*.ts", "src/app.ts"],
  "exclude": ["node_modules"]
}
